<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#1F1F1D"
    android:orientation="vertical"
    tools:context=".comman.SplashScreen">

    <RelativeLayout
        android:id="@+id/left_relative"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/first_line"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:background="#03A9F4" />

        <View
            android:id="@+id/secand_line"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_below="@+id/first_line"
            android:layout_marginTop="10dp"
            android:background="#3F51B5" />

        <View
            android:id="@+id/third_line"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_below="@+id/secand_line"
            android:layout_marginTop="10dp"
            android:background="#0057EE" />

        <View
            android:id="@+id/fourth_line"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_below="@+id/third_line"
            android:layout_marginTop="10dp"
            android:background="#2196F3" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="@+id/left_relative">

        <View
            android:id="@+id/first_line_"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="#03A9F4" />

        <View
            android:id="@+id/secand_line_"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_below="@+id/first_line_"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="#3F51B5" />

        <View
            android:id="@+id/third_line_"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_below="@+id/secand_line_"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="#0057EE" />

        <View
            android:id="@+id/fourth_line_"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:layout_below="@+id/third_line_"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="#2196F3" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="240dp"
        android:layout_height="250dp"
        android:src="@drawable/logomakerca_1678265415117"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="60dp"
        />

    <TextView
        android:id="@+id/develpoer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:fontFamily="serif-monospace"
        android:text="@string/Developer_name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#D2CECE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>